onready var tween := $Tween


func emit_alert(alert : String):
	if alert:
		text = alert
		tween.interpolate_property(self, \"modulate:a\", modulate.a, 1.0, 0.3)
	else:
		tween.interpolate_property(self, \"modulate:a\", modulate.a, 0.0, 0.3)
	tween.start()
	
